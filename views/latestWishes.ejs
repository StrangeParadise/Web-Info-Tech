<!DOCTYPE html>
<html>
<head>
    <title>Home</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="/css/wishes.css" rel="stylesheet" type="text/css" />
</head>

<body>

<div id="main-framework">

    <!-- up -->
    <div id="main-framework-header">
        <div id="user-info">
            <a href="/homepage/<%= user.userName %>">
                <div id="user-portrait">
                    <img src="<%= user.avatar %>" />
                </div>
                <div id="user-id">
                    <%= user.userName %>
                </div></a>
        </div>
    </div>

    <div id="main-framework-body">

        <!-- left -->
        <div id="main-framework-body-left">
            <ul id="navigation-list">
                <li><a href="/homepage/<%= user.userName %>">⌂ Home</a></li>
                <li><a href="/friends/<%= user.userName %>">☺ Friends</a></li>
                <li><a href="/shares/<%= user.userName %>">✎ Shares</a></li>
                <li><a href="/familyTree/<%= user.userName %>">Family Tree</a></li>
                <li><a href="/wishes/<%= user.userName %>">🗒 Wish Lists</a></li>
                <li><a href="/remember/<%= user.userName %>">🕯 Remember</a></li>
                <li><a href="/settings/<%= user.userName %>">⚙ Settings</a></li>
            </ul>
        </div>

        <!-- right -->
        <div id="main-framework-body-right">

            <!-- block1 -->
            <div class="block">
                <div class="block-content">
                    <p><a href="/wishEdit/<%= user.userName %>">My Wishes</a></p>
                    <p><br><%= user.wish.content %></p>
                </div>
                <div class="block-bottom">
                    <%= user.wish.time %><a href="/wishes/<%= user.userName %>?like=<%= user.userName %>">&nbsp;&nbsp;👍<%= user.wish.like %></a>
                </div>
            </div>

            <!-- block2 -->
            <div class="block">
                <div class="block-main">
                    <p>&nbsp;&nbsp;Others' Wishes</p>
                    <br><p>&nbsp;&nbsp;&nbsp;&nbsp;<a href="/wishes/<%= user.userName %>">Most Concerned</a>&nbsp;&nbsp;|&nbsp;&nbsp;Latest</p>
                    <ul id="wish-list">
                        <%users.forEach(function(u){ %>
                        <li><a href="/homepage/<%= u.userName %>"><img class="wishimage" src="<%= u.avatar %>" /><%= u.userName %>:</a>&nbsp;&nbsp;<%= u.wish.content %><a href="/wishes/<%= user.userName %>?like=<%= u.userName %>">&nbsp;&nbsp;👍<%= u.wish.like %></a></li>
                        <% })%>

                    </ul>
                </div>
            </div>


        </div>

        <!-- clear -->
        <div style="clear:both"></div>
    </div>
</div>
</body>
</html>